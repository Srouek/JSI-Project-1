<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/style.css')) }} ">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/nicho.css')) }} ">
    </head>
    <body>
        <header class="bg-dark">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="{{ url("accueil") }}"><img src="{{ asset('assets/img/logo.png') }}" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="{{ url("accueil") }}">Services <span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" href="{{ url("recherche") }}">Recherche</a>
                        <a class="nav-item nav-link" href="{{ url("contact") }}">Contact</a>
                    </div>
                </div>
            </nav>
        </header>
        <script src="{{ absolute_url(asset('assets/js/main.js')) }}"></script>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
