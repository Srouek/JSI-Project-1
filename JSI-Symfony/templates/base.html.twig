<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="{{ absolute_url(asset('assets/css/lux.css')) }} " rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/style.css')) }} ">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/nicho.css')) }} ">
        <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/flo.css')) }} ">
    </head>
    <body>
        <header class="bg-dark">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="{{ url("accueil") }}"><img src="{{ asset('assets/img/logo.png') }}" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="{{ url("recherche") }}">Rechercher un bien</a>
                        <a class="nav-item nav-link" href="{{ url("contact") }}">Contactez-nous </a>
                        <a class="nav-item nav-link" href="{{ url("back_office") }}">Backoffice</a>
                    </div>
                </div>
            </nav>
        </header>
        
        {% block body %}{% endblock %}
        
        <footer>
            <nav>
                <a class="nav-link" href="{{ url("contact") }}">Contactez-nous</a> | <a class="nav-link" href="#references">Nos references</a>
                | <a class="nav-link" href="{{ url("recrutement") }}">Recrutement</a>
            </nav>
            <div id=references>
                <img src="assets/img/logo.png" alt="">
                <img src="assets/img/Linkedin.png" alt="">
                <img src="assets/img/google-plus.png" alt="">
            </div>
            <nav class="mediaIcon">
                <a href="lien linkedin"><i class="fab fa-linkedin"></i></a>
                <a href="lien google plus"><i class="fab fa-google-plus"></i></a>
            </nav>
        </footer>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="{{ absolute_url(asset('assets/js/parallax.js')) }}"></script>
        <script src="{{ absolute_url(asset('assets/js/nicho.js')) }}"></script>
        <script src="{{ absolute_url(asset('assets/js/main.js')) }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
