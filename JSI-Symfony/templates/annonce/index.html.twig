{% extends 'backoffice.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}

            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Liste des annonces</h3>


                <!-- row -->
                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> </h4>
                                <hr>
                                    <thead>
                                        <tr>
                                            <th><i class="fa fa-sort-numeric-asc"></i></th>
                                            <th>Titre</th>
                                            <th>Description</th>
                                            <th><i class=" fa fa-picture-o"></i></th>
                                            <th><i class=" fa fa-calendar"></i></th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for annonce in annonces %}
                                        <tr>
                                            <td>{{ annonce.id }}</td>
                                            <td>{{ annonce.titre }}</td>
                                            <td>{{ annonce.description|slice(0,100)}}...</td>
                                    
                                            <td>{{ annonce.images ? annonce.images|join(', ') : '' }}</td>
                                            
                                            <td>{{ annonce.dateCreation ? annonce.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                            
                                            <td>
                                                <a href="{{ path('annonce_show', {'id': annonce.id}) }}">
                                                <button class="btn btn-success btn-xs"><i class="fa fa-eye"></i></button>
                                                </a>
                                                <a href="{{ path('annonce_edit', {'id': annonce.id}) }}" style="display:inline">
                                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                                </a>
                                                {{ include ('annonce/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="19">Pas d'annonce dans la base de donn√©e</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>

{% endblock %}
