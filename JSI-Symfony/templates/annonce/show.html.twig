{% extends 'backoffice.html.twig' %}

{% block body %}

        <section class="wrapper site-min-height">
                <!-- page start-->
            <div class="chat-room mt">
                <aside class="mid-side">
                        <h1><i class="fa fa-angle-right"></i> Annonce {{ annonce.titre }} | <span>Publié le {{ annonce.dateCreation ? annonce.dateCreation|date('d-m-Y à H:i') : '' }} 
                            <a class="btn btn-primary pull-right" href="{{ path('annonce_edit', {'id': annonce.id}) }}">Editer</a>
                            <a class="btn btn-warning pull-right" href="{{ path('annonce_index') }}">Retour</a>
                            {{ include('annonce/_delete_form.html.twig') }}
                        </h1>
                        <hr>
                    <div class="group-rom">
                        <div class="first-part">Description</div>
                        <div class="second-part">{{ annonce.description }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part">Equipement</div>
                        <div class="second-part">{{ annonce.equipement }}</div>
                    </div>
                     <div class="group-rom">
                        <div class="first-part">Lieux</div>
                        <div class="second-part">{{ annonce.lieu }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part">Images</div>
                        <div class="second-part">
                            <img src="{{ absolute_url(asset(annonce.image1)) }}" style="width:200px" alt="">
                            <img src="{{ absolute_url(asset(annonce.image2)) }}" style="width:200px" alt="">
                            <img src="{{ absolute_url(asset(annonce.image3)) }}" style="width:200px" alt="">
                            <img src="{{ absolute_url(asset(annonce.image4)) }}" style="width:200px" alt="">
                            <img src="{{ absolute_url(asset(annonce.image5)) }}" style="width:200px" alt="">
                        </div>
                    </div>

                    <div class="group-rom">
                        <table class="table table-striped table-advance table-hover col-sm-12">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-building-o"></i> Type</th>
                                    
                                    <th><i class="fa fa-square"></i> Surface</th>
                                    <th><i class=" fa fa-edit"></i> Disponibilité</th>
                                    <th><i class=" fa fa-eur"></i> Loyer</th>
                                    <th><i class=" fa fa-euro"></i> Charges</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{ annonce.type }}</td>
                                    <td>{{ annonce.surface }}<span>m2</span></td>
                                    <td>{{ annonce.disponibilite }}</td>
                                    <td>{{ annonce.loyer }}<span>€/m2</span></td>
                                    <td>{{ annonce.charges }}<span>€/m</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="group-rom last-group">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fa fa-chair"></i> Bureau</th>
                                        <th class=""><i class="fa fa-users"></i> Open Space</th>
                                        <th><i class="fa fa-users"></i> Salle de Réunion</th>
                                        <th><i class=" fa fa-edit"></i> Cuisine</th>
                                        <th><i class=" fa fa-glass-cheers"></i> Espace Détente</th>
                                        <th><i class=" fa fa-user"></i>Accueil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ annonce.bureaux }}</td>
                                        <td>{{ annonce.openSpace }}</td>
                                        <td>{{ annonce.salleReunion }}</td>
                                        <td>{{ annonce.espaceDetente }}</td>
                                        <td>{{ annonce.accueil }}</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- aside right -->
                    <!-- Bloc Note -->
                </aside>
                    
                    <aside class="right-side">

                        <div class="user-head">
                            <!-- En tête
                                <h3>Note</h3>
                            -->
                            {{ include('annonce/_delete_form.html.twig') }}
                        </div>
                        <div class="invite-row">
                            <h4 class="pull-left">Note</h4>
                        </div>
                        <div class="">
                            <blockquote>{{ annonce.note }}</blockquote>
                        </div>

                    </aside>
                        <!-- end aside right -->
                </div>
                <!-- page end-->
            </section>
             
{% endblock %}
