{% extends 'backoffice.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
   <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Demande reçu</h3>


                <!-- row -->
                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> </h4>
                                <hr>
                                <thead>
                                    <tr>
                                        <th><i class="fa fa-bulduig-o"></i> Socièté</th>
                                        <th class=""><i class="fa fa-user-md"></i> Nom</th>
                                        <th><i class="fa fa-at"></i> Email</th>
                                        <th><i class="fa fa-phone"></i> Téléphone</th>
                                        <th><i class=" fa fa-envelope"></i> Demande</th>
                                        <th><i class="fa fa-undo"></i> Simulation</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                
                                <tbody>
                                {% for contact in contacts %}
                                    <tr>
                                    
                                        <td>{{ contact.societe }}</td>
                                        <td>{{ contact.nom }}</td>
                                        <td>{{ contact.email }}</td>
                                        <td>{{ contact.telephone }}</td>
                                        <td>{{ contact.message }}</td>
                                        <td>{{ contact.demande }}</td>
                                        <td>
                                            <a href="{{ path('contact_show', {'id': contact.id}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-eye"></i></button></a>
                                            <a href="{{ path('contact_edit', {'id': contact.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">Pas de message trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('contact_new') }}">Create new</a>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>
                        {% endblock %}
